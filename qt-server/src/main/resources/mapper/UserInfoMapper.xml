<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hotaru.mapper.UserInfoMapper">

    <select id="getUserInfo" resultType="com.hotaru.entity.User">
        select u.id, u.nickname, u.avatar, u.phone, u.role
        from user AS u
        where id = #{userId}
    </select>

</mapper>