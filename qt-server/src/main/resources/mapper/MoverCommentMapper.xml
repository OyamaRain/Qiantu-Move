<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hotaru.mapper.MoverCommentMapper">

    <insert id="insert">
        insert into mover_comment
            (order_id, mover_id, user_id, score, content, create_time)
        VALUES
            (#{orderId}, #{moverId}, #{userId}, #{score}, #{content}, #{createTime})
    </insert>

    <select id="getByMoverId" resultType="com.hotaru.entity.MoverComment">
        select * from mover_comment
        where mover_id = #{moverId}
    </select>

</mapper>